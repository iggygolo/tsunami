# Tsunami Artist & Music Configuration
# Copy this file to .env and customize the values for your music presence

# =============================================================================
# ARTIST CONFIGURATION
# =============================================================================
# Your Nostr public key in npub format - this identifies you as the artist
VITE_ARTIST_NPUB=npub1km5prrxcgt5fwgjzjpltyswsuu7u7jcj2cx9hk2rwvxyk00v2jqsgv0a3h

# Your name as the artist
VITE_ARTIST_NAME=Tsunami Artist

# A description of your music
VITE_MUSIC_DESCRIPTION=A Nostr-powered podcast exploring decentralized conversations

# URL to your artist cover art image (minimum 1400x1400 pixels recommended)
VITE_ARTIST_IMAGE=https://image.example/avatar.png

# Your artist website URL
VITE_ARTIST_WEBSITE=https://tsunami.example

# Copyright notice
VITE_ARTIST_COPYRIGHT=Â© 2025 Tsunami Artist

# =============================================================================
# PODCASTING 2.0 METADATA
# =============================================================================
# Unique identifier for your music (can be your npub)
VITE_MUSIC_GUID=npub1km5prrxcgt5fwgjzjpltyswsuu7u7jcj2cx9hk2rwvxyk00v2jqsgv0a3h

# Type of music content
VITE_MUSIC_MEDIUM=music

# Artist publisher name (can be same as artist name)
VITE_ARTIST_PUBLISHER=Tsunami Artist

# =============================================================================
# LOCATION (OPTIONAL)
# =============================================================================
# Artist location name
VITE_ARTIST_LOCATION_NAME=

# GPS coordinates (latitude,longitude)
VITE_ARTIST_LOCATION_GEO=

# OpenStreetMap identifier
VITE_ARTIST_LOCATION_OSM=

# =============================================================================
# LICENSE
# =============================================================================
# License identifier (e.g., All Rights Reserved, CC BY 4.0)
VITE_MUSIC_LICENSE_IDENTIFIER=All Right Reserved

# License URL
VITE_MUSIC_LICENSE_URL=

# =============================================================================
# LIGHTNING VALUE FOR VALUE
# =============================================================================
# Suggested value amount per minute (in sats)
VITE_MUSIC_VALUE_AMOUNT=1000

# Currency type (sats, USD, EUR, BTC)
VITE_MUSIC_VALUE_CURRENCY=sats

# Value recipients as JSON array
# Format: [{"name":"Name","type":"node|lightning-address","address":"lightning_address_or_pubkey","split":80,"fee":false,"customKey":"","customValue":""}]
VITE_MUSIC_VALUE_RECIPIENTS=[{"name":"Artist","type":"node","address":"030a58b8653d32b99200a2334cfe913e51dc7d155aa0116c176657a4f1722677a3","split":80,"fee":false},{"name":"Producer","type":"lightning-address","address":"producer@getalby.com","split":15,"customKey":"music","customValue":"producer-fee"},{"name":"Platform Fee","type":"node","address":"021f2f8e1e46a48d0a9f1b7e4e8b5c8d5e4f1a2b3c4d5e6f7a8b9c0d1e2f3a4b5c6","split":5,"fee":true}]

# =============================================================================
# FUNDING LINKS (OPTIONAL)
# =============================================================================
# Funding URLs separated by commas (Lightning addresses, donation links, etc.)
VITE_ARTIST_FUNDING=

# =============================================================================
# PERSON METADATA
# =============================================================================
# People involved in the music as JSON array
# Format: [{"name":"Name","role":"artist|featured|producer","group":"cast|crew","img":"","href":""}]
VITE_MUSIC_PERSON=[{"name":"Tsunami Artist","role":"artist","group":"cast"}]

# =============================================================================
# RSS FEED SETTINGS
# =============================================================================
# RSS feed cache time in minutes
VITE_MUSIC_RSS_TTL=60

# =============================================================================
# ADVANCED SETTINGS (OPTIONAL)
# =============================================================================
# Text metadata as JSON array
# Format: [{"purpose":"verify","content":"verification_text"}]
VITE_MUSIC_TXT=

# Remote item references as JSON array  
# Format: [{"feedGuid":"guid","feedUrl":"url","itemGuid":"guid","medium":"music"}]
VITE_MUSIC_REMOTE_ITEM=

# Content blocking settings as JSON object
# Format: {"id":"platform_id","reason":"reason_text"}
VITE_MUSIC_BLOCK=

# New feed URL for music catalog migration
VITE_MUSIC_NEW_FEED_URL=

# =============================================================================
# UPLOAD PROVIDER SETTINGS
# =============================================================================
# Default upload provider (blossom or vercel)
VITE_DEFAULT_UPLOAD_PROVIDER=blossom

# Vercel Blob read/write token for file uploads
# Get this from your Vercel dashboard under Storage > Blob
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here
